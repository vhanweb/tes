@model IEnumerable<POS.ViewModel.ItemIventoryViewModel>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.VariantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beginning)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActualStock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.VariantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beginning)
            </td>
            <td>
                @Html.TextBoxFor(modelItem => item.ActualStock, new { @class = "form-control item-actual" })
            </td>
            <td>
                <button type="button" class="btn btn-warning btn-xs btn-ok-add" data-id="@item.VariantID" data-nama="@item.VariantName" data-instock="@item.Beginning" data-actual="@item.ActualStock">
                    <i class="fa fa-check"></i>
                </button>

            </td>
        </tr>
    }

</table>
